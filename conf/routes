# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET     /webjars/*file              controllers.WebJarAssets.at(file)

GET     /createdb                   controllers.DatabaseController.index


GET     /board                      controllers.BoardController.index
POST    /board                      controllers.BoardController.search

GET     /user                       controllers.UserController.my
GET     /user/:userId               controllers.UserController.index(userId: String)
POST    /user/:userId               controllers.UserController.index(userId: String)
GET     /user/:userId/inbox         controllers.UserController.inbox(userId: String)
GET     /user/:userId/outbox        controllers.UserController.outbox(userId: String)

GET     /login                      controllers.LoginController.index
POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout

GET     /hr                         controllers.HrController.index

POST    /card/new                                       controllers.CardController.newCard
POST    /card/edit                                      controllers.CardController.editCard
GET     /card/view/:id                                  controllers.CardController.view(id: Integer)
POST    /card/view/:id                                  controllers.CardController.view(id: Integer)
POST    /card/view/:id/new_comment                      controllers.CardController.newComment(id: Integer)
POST    /card/view/:cardId/:commentId/delete_comment    controllers.CardController.deleteComment(cardId: Integer, commentId: Integer)
POST    /card/view/:cardId/set_grade                    controllers.CardController.setGrade(cardId: Integer)


GET     /userlist                   controllers.UserlistController.index

GET     /admin                      controllers.AdminController.index
POST    /admin/user/new             controllers.AdminController.newUser
POST    /admin/user/edit            controllers.AdminController.editUser
POST    /admin/user/delete          controllers.AdminController.deleteUser

POST    /admin/busho/new            controllers.AdminController.newBusho
POST    /admin/busho/edit           controllers.AdminController.editBusho
POST    /admin/busho/delete         controllers.AdminController.deleteBusho

POST    /admin/category/new         controllers.AdminController.newCategory
POST    /admin/category/edit        controllers.AdminController.editCategory
POST    /admin/category/delete      controllers.AdminController.deleteCategory


